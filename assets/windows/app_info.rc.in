			VALUE "LegalCopyright", "@Pong_COPYRIGHT@\0"
			VALUE "ProductName", "@Pong_READABLE_NAME@\0"
			VALUE "ProductVersion", "@Pong_VERSION@\0"
		END
	END

	BLOCK "VarFileInfo"
	BEGIN
		VALUE "Translation", 0x409, 0
	END
END
